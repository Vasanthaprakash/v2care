<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h3 class="card-title"><%= @appointment.hospital.name %></h3>

      <p><strong>Address:</strong> <%= @appointment.hospital.address %></p>
      <p><strong>City:</strong> <%= @appointment.hospital.city %></p>

      <p>
        <strong>Appointment Time:</strong>
        <%= @appointment.appointment_time.strftime("%B %d, %Y - %I:%M %p") %>
      </p>

      <p><strong>Status:</strong> <%= @appointment.status || "Booked" %></p>

      <% if @appointment.notes.present? %>
        <p><strong>Notes:</strong> <%= @appointment.notes %></p>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back", appointments_path, class: "btn btn-secondary" %>
  </div>
</div>
