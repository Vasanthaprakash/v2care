<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Your Hospitals</h2>
    <%= link_to new_hospital_path, class: "btn btn-success" do %>
      <i class="fas fa-plus"></i> <!-- Add new hospital icon -->
    <% end %>
  </div>

  <% if @hospitals.any? %>
    <div class="row">
      <% @hospitals.each do |hospital| %>
        <div class="col-md-6 col-lg-6 mb-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= hospital.name %></h5>
              <p class="card-text">
                <strong>City:</strong> <%= hospital.city %><br>
                <strong>Type:</strong> <%= hospital.hospital_type %><br>
                <strong>Specialization:</strong> <%= hospital.specialization %><br>
                <strong>Slots/Day:</strong> <%= hospital.slots %>
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <%= link_to hospital_path(hospital), class: "btn btn-info btn-sm", title: "View" do %>
                <i class="fas fa-eye"></i>
              <% end %>

              <%= link_to edit_hospital_path(hospital), class: "btn btn-sm", title: "Edit" do %>
                <i class="fas fa-edit"></i>
              <% end %>

              <%= link_to hospital, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning">
      You have not added any hospitals yet.
    </div>
  <% end %>

</div>
